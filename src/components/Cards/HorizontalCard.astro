---
import { Image } from 'astro:assets'
import Badge from '@components/Badge.astro'

const { title, img, desc, url, badge, tags, target = '_blank' } = Astro.props
---

<div
  class="rounded-lg bg-base-200 border-base-content border-[1px] border-solid border-opacity-10 hover:shadow-xl transition ease-in-out hover:scale-[102%] hover:bg-base-300"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={468}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[15rem] h-[8rem] sm:h-[13rem] md:h-[8rem] rounded-sm object-cover object-center"
            transition:name={`post-image-${title}`}
          />
        )
      }
      <div class="grow w-full">
        <h2 class="flex items-center gap-3 text-xl font-bold">
          <span transition:name={`post-title-${title}`}>{title}</span>
          {badge && <Badge text={badge} />}
        </h2>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <span class="badge badge-outline mt-4">{tag}</span>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
