---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-lg bg-base-200 border-base-content border-[1px] border-solid border-opacity-10 hover:shadow-xl transition ease-in-out hover:scale-[102%] hover:bg-base-300"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[14rem] rounded-sm"
          />
        )
      }
      <div class="grow w-full">
        <h2 class="flex items-center gap-3 text-xl font-bold">
          {title}
          {
            badge && (
              <span
                class:list={[
                  "badge font-normal bg-opacity-60 text-white",
                  {
                    "badge-success": badge === "Activo",
                    "badge-warning": badge === "Archivado",
                    "badge-info": badge === "Pausado",
                    "badge-secondary": badge === "PrÃ³ximamente",
                  },
                ]}
              >
                {badge}
              </span>
            )
          }
        </h2>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <span class="badge badge-outline mt-4">{tag}</span>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
