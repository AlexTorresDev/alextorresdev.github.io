---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-lg bg-base-200 border-base-content border-[1px] border-solid border-opacity-10 hover:shadow-xl transition ease-in-out hover:scale-[102%] hover:bg-base-300"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[14rem] rounded-sm"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <span class="badge badge-secondary font-normal mx-2">{badge}</span>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <span class="badge badge-outline mt-4">{tag}</span>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
