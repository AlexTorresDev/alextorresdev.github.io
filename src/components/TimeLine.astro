---
type Props = {
	title: string;
	subtitle: string;
	modality?: string;
};

const { title, subtitle, modality } = Astro.props;
---

<div class="flex">
	<div class="education__time">
		<span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
		<span
			class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
		></span>
	</div>
	<div class="experience__data bd-grid px-5">
		<h3 class="font-semibold">{title}</h3>
		<span class="font-light text-sm">{subtitle}</span>
		{modality && <span class="badge badge-primary ml-2">{modality}</span>}
		<div class="text-justify">
			<slot />
		</div>
	</div>
</div>
