---
type Props = {
	title: string
	subtitle: string
	modality?: string
}

const { title, subtitle, modality } = Astro.props
---

<li class="mb-10 ms-6">
	<span
		class="absolute flex items-center justify-center w-6 h-6 bg-emerald-100 rounded-full -start-3 ring-8 ring-transparent dark:bg-emerald-900"
	>
		<svg
			class="w-2.5 h-2.5 text-emerald-800 dark:text-emerald-400"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			fill="currentColor"
			viewBox="0 0 20 20"
		>
			<path
				d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
			></path>
		</svg>
	</span>
	<h3
		class="flex items-center mb-1 text-lg font-semibold text-neutral-800 dark:text-white"
	>
		{title}
	</h3>
	<time
		class="block mb-2 text-sm font-normal leading-none text-neutral-400 dark:text-neutral-500"
		>{subtitle}
		{
			modality && (
				<span class="bg-emerald-100 text-emerald-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-emerald-900 dark:text-emerald-300 ms-3">
					{modality}
				</span>
			)
		}
	</time>
	<div class="mb-4 text-base font-normal text-neutral-500 dark:text-neutral-400">
		<slot />
	</div>
</li>
